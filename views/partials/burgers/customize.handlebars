
<div id="cust-modal" class="modal">
  <div class="modal-background"></div>
  <div class="modal-card">
    <header class="modal-card-head">
      <p class="modal-card-title">Build Your Burger</p>
      <button class="delete"></button>
    </header>
    <section class="modal-card-body">
      <div class="tile is-ancester is-12">
        <div class="tile is-vertical is-6">
          <div class="tile">
            <div class="tile is-parent is-vertical">
              <form id='select-toppings'>
                <div class="has-text-left">
                  <div class="form-group toppings">
                    <p><strong> Choose Your Toppings </strong></p>
                    <article class="tile is-child is-lettuce">
                      <input name='toppings' type='checkbox' value='lettuce'>lettuce</input><br>
                    </article>
                    <article class="tile is-child is-tomato">
                      <input name='toppings' type='checkbox' value='tomato'>tomato</input><br>
                    </article>
                    <article class="tile is-child is-onion">
                      <input name='toppings' type='checkbox' value='onion'>onion</input><br>
                    </article>
                    <article class="tile is-child is-pickles">
                      <input name='toppings' type='checkbox' value='pickles'>pickles</input><br>
                    </article>
                    <article class="tile is-child is-cheese">
                      <input name='toppings' type='checkbox' value='cheese'>cheese</input><br>
                    </article>
                    <article class="tile is-child is-bacon">
                      <input name='toppings' type='checkbox' value='bacon'>bacon</input><br>
                    </article>
                  </div>
                  <div class="form-group patty">
                    <p><strong> Choose Your Patty </strong></p>
                    <article class="tile is-child is-beef">
                      <input name='patty' type='checkbox' value='beef'>beef patty</input><br>
                    </article>
                    <article class="tile is-child is-chicken">
                      <input name='patty' type='checkbox' value='chicken'>chicken patty</input><br>
                    </article>
                    <article class="tile is-child is-bean">
                      <input name='patty' type='checkbox' value='bean'>bean patty</input><br>
                    </article>
                  </div>
                  <div class="form-group condiments">
                    <p><strong> Choose Your Sauce </strong></p>
                    <article class="tile is-child is-ketchup">
                      <input name='condiments' type='checkbox' value='ketchup'>ketchup</input><br>
                    </article>
                    <article class="tile is-child is-mustard">
                      <input name='condiments' type='checkbox' value='mustard'>mustard</input><br>
                    </article>                    
                    <article class="tile is-child is-mayo">
                      <input name='condiments' type='checkbox' value='mayo'>mayonaise</input><br>
                    </article>
                  </div>
                </div>
              </form>
            </div>
          </div>
        </div>

        <div class="tile is-vertical is-6">
          <div class="tile">
            <div class="tile is-parent is-vertical">
              <article class="tile is-child notification is-bun top-bun shadow">
                <p class="title is-5 has-text-centered"><strong> Custom Burger </strong></p>
              </article>

              <article class="tile is-child notification is-bun bottom-bun shadow">

              </article>
            </div>
          </div>
        </div>

      </div>
    </section>
    <footer class="modal-card-foot">
      <a class="button is-success is-small save-burger">Save changes</a>
      <a value="#cust-modal" class="button is-warning is-small close-modal">Cancel</a>
    </footer>
  </div>
</div>